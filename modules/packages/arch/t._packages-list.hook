# /usr/share/libalpm/hooks/packages-list.hook

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Sync packages list
When = PostTransaction
Exec = /bin/sh -c '[ -x "{{ env.HOME }}/bin/sync_packages" ] && {{ env.HOME }}/bin/sync_packages'
